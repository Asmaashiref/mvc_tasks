@{
    SelectList list = new SelectList(ViewBag.managr, "Id", "fname");
}
@model department

<form asp-action="Add" asp-controller="department">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label asp-for="startdate" class="form-label"></label>
        <input class="form-control" asp-for="startdate">
    </div>
   

    <div class="mb-3 form-check">
        <label class="form-check-label" asp-for="MGRssn"></label>
        <select asp-for="MGRssn" class="form-control" asp-items="list">
        </select>
    </div>
    <button type="submit" class="btn btn-outline-success">Add</button>
   
</form>