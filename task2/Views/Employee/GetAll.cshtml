@{
    Layout = "_ EmployeeLayout";
    int i = 1;
}
@model List<employee>
 
<h1> Company Employees </h1>
<style>

    h1{
        color:darkgreen;
        text-align:center;
        margin-top:100px

    }

    .rin_body {
        margin-top: 100px;
        margin-bottom: 100px;
    }

    p {
        text-align: center;
    }
</style>
<div class="rin_body">
   
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th scope="col">employee Number</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Address</th>
                <th scope="col">Salary</th>
                <th scope="col">Sex</th>
                <th scope="col">Department </th>
                <th scope="col">manager name</th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@(i++)</th>
                    <td>@item.fname</td>
                    <td>@item.lname</td>
                    <td>@item.address</td>
                    <td>@item.salary</td>
                    <td>@item.Sex</td>
                  
                    <td>
                        @if (item.Department != null)
                        {
                            @item.Department.Name
                        }
                        else
                        {
                            @Html.Raw("Null")
                        }
                        
                    </td>
                    <td>
                        @if (item.manager != null)
                        {
                            @item.manager.fname
                        }
                        else
                        {
                            @Html.Raw("Null")
                        }
                    </td>
                  
                  
                    <td> <button onclick="window.location.href='Details?id=@item.Id'"> View Details </button></td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section PageTitle {
        All Employee
    
} 
