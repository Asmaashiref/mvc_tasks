@{
    Layout = "_ EmployeeLayout";
    int i = 1;
}

<h1> Projectes </h1>
<a class="btn btn-outline-success" href="/project/Adddata">Add project</a>

<style>

    h1 {
        color: darkgreen;
        text-align: center;
        margin-top: 100px
    }

    .rin_body {
        margin-top: 100px;
        margin-bottom: 100px;
    }

    p {
        text-align: center;
    }
</style>
<div class="rin_body">

    <table class="table">
        <thead class="table-dark">
            <tr>
                <th scope="col">Number</th>
                <th scope="col">Name</th>
                <th scope="col">Location </th>
                <th scope="col">City</th>
                <th scope="col">Department</th>

                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@(i++)</th>
                    <td>@item.pname</td>
                    <td>@item.plocation</td>
                    <td>@item.city</td>
                
                    <td>
                        @if (item.Department != null)
                        {
                            @item.Department.Name
                        }
                        else
                        {
                            @Html.Raw("Null")
                        }

                    </td>

                    <td>
                        <button onclick="window.location.href='Details?id=@item.Id'" class="btn btn-outline-success"> View Details </button>
                        <button onclick="window.location.href='/project/Updatedata/@item.Id'" class="btn btn-outline-success"> Upate data </button>
                        <button onclick="window.location.href='/project/delete/@item.Id'" class="btn btn-outline-success"> delete data </button>



                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>
