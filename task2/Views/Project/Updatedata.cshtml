@{
}
@model project
<h1>Update projects</h1>


<form class="row g-3 me-5 container-fluid" action="/project/Update">

    <input name="id" hidden value="@Model.Id" />
    <div class="col-6">
        <label for="inputname" class="form-label">Name</label>
        <input type="text" class="form-control" id="inputname" placeholder=" project name" name="name" value="@Model.pname">
    </div>
    <div class="col-6">
        <label for="inputAddress" class="form-label">Location</label>
        <input type="text" class="form-control" id="inputAddress" placeholder="Location" name="location"value="@Model.plocation">
    </div>
    <div class="col-md-6">
        <label for="inputCity" class="form-label">City</label>
        <input type="text" class="form-control" id="inputCity" name="city"value="@Model.city">
    </div>
    <div class="col-md-6">
        <label class="form-check-label" for="department">Department</label>

        <select name="deptId" id="department">
            @foreach (department item in ViewBag.departments)
            {
                if (Model.Id == item.Id)
                {
                    <option value="@item.Id" selected>@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>

                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-outline-success">Update project</button>
</form>

<style>
    h1 {
        margin-left: 500px;
        color: darkgreen;
    }

    form {
        margin-left: 500px;
    }
</style>
